<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_marginTop="100dp"
        android:foregroundGravity="center"
        android:background="@drawable/rounded_radius"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/date_in_viewElement"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="50dp"

            android:background="@drawable/border"
            android:gravity="center"
            android:text="20/1/2020" />

        <TextView
            android:id="@+id/length_in_viewElement"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="71dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="170cm"

            />

        <TextView
            android:id="@+id/status_in_viewElement"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="71dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/white"

            android:gravity="center"
            android:text="Normal" />

        <TextView
            android:id="@+id/weight_in_viewElement"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/border"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="60kg" />

    </FrameLayout>
</LinearLayout>