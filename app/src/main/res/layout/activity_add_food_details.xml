<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_food_details"
    android:orientation="vertical"

    >

    <include layout="@layout/toolbarwithicon"

        />


    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/food_details"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/name_of_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="@string/name"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="153dp"
                tools:layout_editor_absoluteY="152dp" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/category_of_food"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="23dp"
                android:layout_weight="1"
                android:text="category"
                android:textColor="@color/blue"

                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Spinner"
                android:id="@+id/spinner1"
                android:entries="@array/Category"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calory_of_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="55dp"
                android:text="@string/calory"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/editTextTextPersonName7"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxHeight="48dp"
                android:minHeight="48dp"

                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:paddingTop="10dp"
                android:text="@string/cal_g"
                android:textColor="@color/black"
                android:textSize="18sp"

                android:textStyle="normal"
                tools:ignore="TextContrastCheck" />


        </LinearLayout>


        <TextView
            android:id="@+id/Photo_of_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:minWidth="48dp"
            android:text="@string/photo_of_food"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>




    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:layout_weight="1"
        android:contentDescription="@string/imagei"
        app:srcCompat="@drawable/salad" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/upload_photo_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_radius"
            android:text="@string/upload_photo"
            android:textColor="@color/white"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_radius"
            android:text="@string/save"
            android:textColor="@color/white"

            tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>




</LinearLayout>